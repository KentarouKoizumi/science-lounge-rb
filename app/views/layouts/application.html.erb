<!DOCTYPE html>
<html>
  <head>
    <title>サイエンスラウンジ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <div id="logo-box">
          <%= link_to image_tag("logo.png", class:"logo"), "/"%>
      </div>
      <div id="main-wrapper">
        <%= yield %>
      </div>
  </body>
</html>
